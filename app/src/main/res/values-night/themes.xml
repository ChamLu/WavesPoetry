<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.T820" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.T820" parent="Theme.SplashScreen" >
        <item name="windowSplashScreenBackground">#D051F0</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/waves</item>
        <item name="windowSplashScreenAnimationDuration">3000</item>

        <!--        指定你App 原来主题-->
        <item name="postSplashScreenTheme">@style/Theme.Material3.NoTitle_FullScreen</item>


    </style>

    <style  name="Theme.Material3.NoTitle_FullScreen"
        parent="Base.Theme.T820"> <!--自定义主题名称-->
        <!--        <item name="android:windowNoTitle">true</item>-->
        <item name="android:windowFullscreen">true</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>

    </style>
</resources>